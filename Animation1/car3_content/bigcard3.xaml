<UserControl x:Class="Animation1.car3_content.bigcard3"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Animation1.car3_content"
             mc:Ignorable="d" 
             Height="Auto" Width="Auto">
    <Grid Width="400" Height="305">
        <Button Style="{StaticResource MaterialDesignFloatingActionMiniDarkButton}" 
                    Width="20" Height="20" Name="btn3"
                    VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,10,0,0" Click="Btn3_Click" ></Button>
        <TextBox x:Name="tx3" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="24" Margin="0,5,0,0">Direct Mail</TextBox>
        <Button x:Name="getemail" Style="{StaticResource MaterialDesignRaisedDarkButton}" Width="200" Click="Getemail_Click">
            Email Campaign Detail
        </Button>
    </Grid>
</UserControl>
